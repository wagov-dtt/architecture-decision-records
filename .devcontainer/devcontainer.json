{
	"name": "ADR Development Environment",
	"image": "mcr.microsoft.com/devcontainers/base:bookworm",
	"features": {
    	"ghcr.io/devcontainers-extra/features/mise:1": {}
	},
	"customizations": {
		"vscode": {
		"extensions": [
			"hverlin.mise-vscode"
		]
		}
	},
	"hostRequirements": {
		"memory": "16gb"
	},
	"postCreateCommand": "echo 'eval \"$(mise activate bash)\"' >> ~/.bashrc"
}
